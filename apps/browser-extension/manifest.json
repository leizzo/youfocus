{
  "manifest_version": 3,
  "name": "Youtube Focus",
  "short_name": "YT Focus",
  "version": "0.2.0",
  "version_name": "0.2.0 alpha",
  "default_locale": "en",
  "description": "A Chrome Extension for Youtube Focus",

  "action": { "default_popup": "index.html" },
  "content_scripts": [
    {
      "js": ["src/content/index.jsx"],
      "run_at": "document_end",
      "matches": ["https://*.youtube.com/*"]
    }
  ],
  "permissions": ["https://*/*", "http://*/*", "storage"]
}
